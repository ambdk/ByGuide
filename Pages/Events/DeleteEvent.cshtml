@page
@model ByGuide.Pages.Events.DeleteEventModel
@{
    ViewData["Title"] = "Admin";
}

<h1>Bekræft sletning</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Event.Name" class="control-label">Begivenhedsnavn:</label>
        <span class="form-control">@Model.Event.Name</span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Price" class="control-label">Pris:</label>
        <span class="form-control">@Model.Event.Price</span>
    </div>
    <div class="form-group">
        <label asp-for="Event.DatetimeList" class="control-label">Dato:</label>
        <span class="form-control">@Model.Event.DatetimeList</span>
    </div>
    <div class="form-group">
        <label asp-for="Event.ExternalLink" class="control-label">Ekstern Link:</label>
        <span class="form-control">@Model.Event.ExternalLink</span>
    </div>
    <div class="form-group">
        <label asp-for="Event.HandicapAccessible" class="control-label">Handicap Adgang:</label>
        <span class="form-control">@Model.Event.HandicapAccessible</span>
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Bekræft Sletning" class="btn btn-danger" />
        </div>
    </p>
</form>