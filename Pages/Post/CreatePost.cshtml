@page
@model ByGuide.Pages.Post.CreatePostModel
@{
}

<h1>Opret nyt indlæg</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Post.Id" class="control-label"></label>
        <input asp-for="Post.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Post.Title" class="control-label">Titel</label>
        <input asp-for="Post.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Post.Description" class="control-label">Beskrivelse</label>
        <input asp-for="Post.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Post.Category" class="control-label">Kategori</label>
        <input asp-for="Post.Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Post.Address" class="control-label">Adresse</label>
        <input asp-for="Post.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Post.ImageURL" class="control-label">Billed URL</label>
        <input asp-for="Post.ImageURL" class="form-control" />
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Opret" class="btn btn-primary" />
        </div>
    </p>
</form>