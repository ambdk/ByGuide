<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ByGuide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ByGuide.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.png" width="130" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Hjem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/History/GetAllHistoryItems">Historie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Activities/GetAllActivities">Aktiviteter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Experiences/GetAllExperiences">Oplevelser</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Events/GetAllEvents">Events</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/Opslag/234234">Eksempel på "Side Ikke Fundet"</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Posts/GetAllPosts">Se alle opslag</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Posts/CreatePost">Opret opslag</a>
                                </li>
                                <li><a class="dropdown-item" asp-page="/Posts/GetPost" asp-route-id="4">Eksempel på opslag</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Experience/GetAllExperiences">
                                        Se
                                        alle oplevelser
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Experience/CreateExperience">
                                        Opret
                                        oplevelse
                                    </a>
                                </li>
                                <li><a class="dropdown-item" href="/Oplevelser/4">Eksempel på oplevelse</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Turist/GetAllTurists">
                                        Get all
                                        turists
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Turist/CreateTurist">
                                        Create
                                        turist
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Turist/EditTurist">Edit turist</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Turist/DeleteTurist">
                                        Delete
                                        turist
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-light text-center">
            &copy; 2023 - Roskilde ByGuide
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome/js/fontawesome.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>