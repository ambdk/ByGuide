@page
@model ByGuide.Pages.Experience.CreateExperienceModel
@{
}

<h1>Opret ny oplevelse</h1>

<form method="post">
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.Title" class="control-label">Titel</label>
        <input asp-for="@Model.Experience.Title" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.Description" class="control-label">Beskrivelse</label>
        <input asp-for="@Model.Experience.Description" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.Category" class="control-label">Kategori</label>
        <input asp-for="@Model.Experience.Category" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.AdmissionPrice" class="control-label">Pris</label>
        <input asp-for="@Model.Experience.AdmissionPrice" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.Address" class="control-label">Adresse</label>
        <input asp-for="@Model.Experience.Address" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.ExternalLink" class="control-label">Link</label>
        <input asp-for="@Model.Experience.ExternalLink" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label class="font-weight-bold mr-2" asp-for="@Model.Experience.HandicapAccesible">Handicapvenlig</label>
        <input asp-for="@Model.Experience.HandicapAccesible" type="checkbox" class="d-inline-block" id="HandicapAccesible">
    </div>

    <div class="form-group mt-3">
        <label asp-for="@Model.Experience.ImageURL" class="control-label">Billed URL</label>
        <input asp-for="@Model.Experience.ImageURL" class="form-control" />
    </div>

    <div class="mt-3">Åbningstider</div>
    <div class="row">
        @foreach (var day in new[] { "Mandag", "Tirsdag", "Onsdag", "Torsdag", "Fredag", "Lørdag", "Søndag" })
        {
            <div class="col-md-1">
                <label>@day</label>
                <input type="text" name="OpeningHours[@day]" class="form-control" />
            </div>
        }
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Opret" class="btn btn-primary" />
        </div>
    </p>
</form>