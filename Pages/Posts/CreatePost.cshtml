@page
@model ByGuide.Pages.Posts.CreatePostModel
@{
}

<h1>Opret ny aktivitet</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Post.Title" class="control-label"></label>
        <input asp-for="Post.Title" class="form-control" />
        <span asp-validation-for="Post.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Description" class="control-label"></label>
        <textarea asp-for="Post.Description" class="form-control" style="height: 150px;"></textarea>
        <span asp-validation-for="Post.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Category" class="control-label"></label>
        <select asp-for="Post.Category" asp-items="@(new SelectList(Categories.AllowedCategories))">
            <option value="">Vælg en kategori</option>
        </select>
        <span asp-validation-for="Post.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Address" class="control-label"></label>
        <input asp-for="Post.Address" class="form-control" />
        <span asp-validation-for="Post.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.ImageURL" class="control-label"></label>
        <input asp-for="Post.ImageURL" class="form-control" />
        <span asp-validation-for="Post.ImageURL" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Opret" class="btn btn-primary" />
        </div>
    </p>
</form>