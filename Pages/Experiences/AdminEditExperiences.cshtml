@page "/Admin/Oplevelser"
@model ByGuide.Pages.Experiences.GetAllExperiencesModel
@{
    ViewData["Title"] = "Admin";
}

<div id="page-e">
    <div class="row g-3">
        <h1>Oplevelser Tabel</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titel</th>
                    <th scope="col">Beskrivelse</th>
                    <th scope="col">Pris</th>
                    <th scope="col">Ekstern Link</th>
                    <th scope="col"></th>
                    <th scope="col"><a class="btn btn-primary" asp-page="CreateExperience">Opret en Oplevelse</a></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Experiences != null)
                {
                    foreach (var e in Model.Experiences)
                    {
                        <tr>
                            <th scope="row">@e.Id</th>
                            <td>@e.Title</td>
                            <td class="text-truncate" style="max-width: 20px;">@e.Description</td>
                            <td>@e.AdmissionPrice</td>
                            <td class="text-truncate" style="max-width: 30px;">@e.ExternalLink</td>
                            <td><a class="btn btn-primary btn-sm" type="button" title="Rediger" asp-page="EditExperience"
                                    asp-route-id="@e.Id">Rediger</a></td>
                            <td><a class="btn btn-danger btn-sm" type="button" title="Slet" asp-page="DeleteExperience"
                                    asp-route-id="@e.Id">Slet</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>